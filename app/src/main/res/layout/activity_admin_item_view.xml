<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:weightSum="1">

    <CheckBox
        android:id="@+id/chbx_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="CheckBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_adminMinus" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_minus"
        android:id="@+id/btn_adminMinus"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/et_adminRemain"
        android:scaleType="fitCenter" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_plus"
        android:id="@+id/btn_adminPlus"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter" />

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/et_adminRemain"
        android:inputType="numberSigned"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_adminPlus"
        android:text="1234"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:maxLength="4"
        android:layout_width="wrap_content" />


</RelativeLayout>
